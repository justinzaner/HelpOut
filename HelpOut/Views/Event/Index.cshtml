@model IEnumerable<HelpOut.Models.EventDTO>
@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-top: 30px; margin-bottom: 30px">
    <div class="col-md-6">
        <img class="img-responsive" src="~/Content/Images/NewEventSearch.png" alt="About Us" style="max-height: 100px; margin-top: 30px; margin-bottom: 30px">
    </div>

    <div class="col-md-6" style="background-color:#b6e2a6;border:groove 1px; border-color:#e5f1c3">
        @using (Html.BeginForm())
        {
            <p>
                <b>
                    Search by Event Name, Location, or Organization: @Html.TextBox("SearchString")
                </b>
            </p>
            <p><input type="submit" value="Search" /></p>
        }
        <p>
            @Html.ActionLink("Advanced Search", "AdvancedSearch")
        </p>
        <p>
            @Html.ActionLink("Create New Event", "Create")
        </p>
    </div>


</div>

<table class="table table-hover">
    <tr style="background-color: #81a326; text-transform: uppercase">
        <th>
            Organization
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:#b6e2a6">
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.EventID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
        </tr>
    }

</table>
